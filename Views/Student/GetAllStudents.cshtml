@model IEnumerable<UnitOfWorkCRUD.DTO_Model.StudentDTO>

@{
    ViewData["Title"] = "List of Students";
}

<div class="container">
    <div class="row">
        <div class="col-10 offset-1">
            <table class="table table-dark table-striped-columns">
                <thead class="text-center bg-dark text-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Age</th>
                        <th>email<th>
                        <th>phoneNo</th>
                        <th>city</th>
                        <th>Course</th> 
                        <th>EDit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td class="text-center">@student.id</td>
                            <td class="text-center">@student.name</td>
                            <td class="text-center">@student.age </td>
                            <td class="text-center">@student.email </td>
                            <td class="text-center">@student.phone</td>
                            <td class="text-center">@student.city </td>
                            <td class="text-center">@student.Course</td>
                            <td>

                                <a asp-controller="Student" asp-action="EditStudent" asp-route-id = "@student.id" >Edit</a>
                            </td>
                            <td>
                                <a href="/Student/DeleteStudent?Id=@student.id">Delete</a>
                            </td> 
                        </tr>
                    }
                </tbody>
            </table>

            <a asp-action="AddNewStudent" class="btn btn-sm btn btn-primary">Create</a>
        </div>
    </div>

</div>
